@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron frontPage text-center">
    <h2>ORROCK/MENDENHALL</h2>
    <h1 class="indexTitle">SPORTS MEDICINE</h1>
    <h2>& PHYSICAL THERAPY</h2>
    <h3>Your Neighborhood Training Room</h3>
    <br />
    <p><a href="https://asp.net" class="btn btn-primary btn-lg myButton">Get a Free Injury Assessment &raquo;</a></p>
</div>

<div>
    <div class="row">
        <div class="col-md-4">
            <h2>Patient Login</h2>
            <p>
                Have you visited us before? Login to your account and see your visit history
            </p>
            <p><a>@Html.ActionLink(HttpUtility.HtmlDecode("Log In &#187;"), "PatientLogin", "Patient", new { @class = "btn btn-default"})</a></p>
        </div>
        <div class="col-md-4">
            <h2>Schedule an Appointment</h2>
            <p>We have three convenient locations to serve you.</p>
            <p><a class="btn btn-default" href="https://www.proptutah.com/">Find Locations &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Contact Us</h2>
            <p>If it hurts? give us a call.</p>
            <p><a class="btn btn-default" href="https://www.proptutah.com/">Contact Us &raquo;</a></p>
        </div>
    </div>
</div>
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="3000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Images/frontPage.png" />
            <div class="carousel-caption">
                <!--<h3>Caption Text</h3>-->
            </div>
        </div>
        <div class="item">
            <img src="~/Content/Images/stretch.jpg" />
            <div class="carousel-caption">
                @*<h3>Caption Text</h3>*@
            </div>
        </div>
        <div class="item">
            <img src="~/Content/Images/running.jpg" />
            <div class="carousel-caption">
                @*<h3>Caption Text</h3>*@
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div> <!-- Carousel -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script>
    $('.carousel').carousel({
        interval: 3000
    })
</script>

<style>
    .row {
        text-align:center
    }
</style>